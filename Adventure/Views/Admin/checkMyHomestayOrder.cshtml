
@{
                /**/

                ViewBag.Title = "查看被预定房源";
                Layout = "~/Views/Admin/Admin_Layout.cshtml";
}
<script>
    function deleteOrderedHomestay(orderID) {
        var choice = confirm("是否确认删除该用户订单?提交后将不可更改。");//确认框。
        if (choice == true) {
            $.ajax({
                type: "post",
                url: "../Admin/RemoveActivity",
                data: {
                    orderID: orderID
                },
                async: false,
                dataType: 'json',
                success: function (d) {
                    var addState = d.isSuccess;
                    if (addState == true) {//登录成功
                        console.log(d);
                        window.location.href = "/Admin/ViewActivity";
                        alert("删除成功!");
                    }
                    else {
                        //登录失败
                        console.log(d);
                        alert(d.message);
                        window.location.href = "/Admin/ViewActivity";
                    }
                },
                error: function (a) {
                    console.log(a);
                    alert("删除失败!");
                }
            });
        }
    }
    </script>
<!--start page content-->
