    <script src="~/Scripts/js/app.js"></script>
    <script src="~/Scripts/js/layout.js"></script>
    <script src="~/Scripts/js/theme-color.js"></script>
    <!-- data tables -->
    <script src="~/plugins/datatables/jquery.dataTables.min.js"></script>
    <script src="~/plugins/datatables/plugins/bootstrap/dataTables.bootstrap4.min.js"></script>
    <script src="~/Scripts/js/pages/table/table_data.js"></script>
