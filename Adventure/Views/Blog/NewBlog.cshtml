
@{
    ViewBag.Title = "新建旅行故事";
}

<link rel="stylesheet" href="~/Content/Activity/paper-bootstrap-wizard.css" />

<script>
    $(document).ready(function () {

        var flag = "@ViewBag.flag";
        var errorMessage = "@ViewBag.errorMessage";
        if (flag == "1") {

        } else {
            if (flag != "") {
                      @{ ViewBag.flag = null; }
                alert(errorMessage);
                window.location.href = "../Blog";
            }
        }
    })
</script>


<div class="image-container set-full-height" style="background-image: url('../images/Publish_bg.jpg');">
    <!-- Big container -->
    <div class="container">
        <div class="row">
            <div class="col-sm-12">
                <!-- Wizard container -->
                <div class="wizard-container">
                    <div class="card wizard-card" id="wizard">
                        <div class="wizard-header">
                            <h3 class="wizard-title">发布旅行故事</h3>
                            <hr />
                        </div>

                        <form role="form" action="~/Blog/SubmitBlog" method="post" id="new-blog-form" enctype="multipart/form-data" style="text-align:center">

                            <div style="width:75%;margin:auto;text-align:left">
                                <label for="title">标题</label>
                                <br />
                                <input class="blogTitle" type="text" name="blogTitle" id="blogTitle" value="" maxlength="100" style="width:100%">
                            </div>

                            <div style="width:75%;margin:auto;text-align:left">
                                <label for="picture">图片</label>
                                <br />
                                <input class="blogPicture" type="file" accept="image/*" name="blogPicture" id="blogPicture" value="" size="22" style="width:100%">
                            </div>

                            <div style="width:75%;margin:auto;text-align:left">
                                <label for="content">内容</label>
                                <br />
                                <textarea class="blogContent" name="blogContent" id="blogContent" maxlength="300" cols="58" rows="10" style="width:100%"></textarea>
                            </div>

                            <div>
                                <input class="btn" name="blogSubmit" type="submit" id="blog-submit" value="提交">
                            </div>

                        </form>

                    </div>
                </div>
                <!-- wizard container -->
            </div>
        </div>
    </div>
    <!--  big container -->
</div>