    <div class="book-pag" style="margin-top:10px">
        <h2>活动日期</h2>
        <div class="book-pag-frm1">
            <label>开始时间: @ViewBag.start_time </label>
            <!--<input class="date" id="datepicker1" type="text" value="Date" onfocus="this.value = '';" onblur="if (this.value == '') {this.value = '';}" required="">-->
        </div>
        <div class="book-pag-frm2">
            <label>结束时间: @ViewBag.end_time </label>
            <!--<input class="date" id="datepicker2" type="text" value="Date" onfocus="this.value = '';" onblur="if (this.value == '') {this.value = '';}" required="">-->
        </div>
        <div class="clear"></div>
    </div>
    <!--Date Picker-->
    <script src="~/Scripts/jquery-ui.js"></script>
    <script>
            $(function () {
                $("#datepicker,#datepicker1,#datepicker2").datepicker();
            });

              function submitForm() {
        $.ajax({
            type: "post",
            url: "../Order/AddHomeStayOrder",
            data: {
                start_time: "@ViewBag.start_time",
                end_time:"@ViewBag.end_time",
                homestay_id: "@ViewBag.homestay.homestay_id",
                fee:"@ViewBag.platform_fee",
                price: "@ViewBag.total_price",
                payment: $('input:radio:checked').val()
            },
            async: false,
            dataType: 'json',
            success: function (d) {
                var addState = d.isSuccess;
                if (addState == true) {//登录成功
                    console.log(d);
                    alert("订单创建成功!");
                    window.location.href = "../HomeStay/StayInfo?productID=@ViewBag.homestay.homestay_id";
                }
                else {
                    //登录失败
                    console.log(d);
                    alert(d.message);
                }
            },
            error: function (a) {
                console.log(a);
                alert(a.message);
            }
        });

    }
    function returnToDetail() {
        window.location.href = "../HomeStay/StayInfo?productID=@ViewBag.homestay.homestay_id";
    }
    </script>
    <!--//Date Picker-->

    <div class="food">
