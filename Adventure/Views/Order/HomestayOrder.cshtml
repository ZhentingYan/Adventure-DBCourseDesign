        <h2 style="margin-top:10px">订单价格:@ViewBag.total_price 元</h2> 
        <h2 style="margin-top:10px">平台服务费:@ViewBag.platform_fee 元</h2>

        <div class="clear"></div>
    </div>
    <div class="members">
        <h2 style="margin-top:10px">活动人数:@ViewBag.person_num 人</h2>
        <!--<div class="dropdown-button">
            <select class="dropdown" tabindex="10" data-settings='{"wrapperClass":"flat"}'>
                <option value="0">0</option>
                <option value="1">1</option>
                <option value="2">2</option>
