    <script src="~/Scripts/main.js"></script>
    <script src="~/Scripts/range.js"></script>
    <script src="~/Scripts/jquery.backstretch.min.js"></script>
    <script src="~/Scripts/retina-1.1.0.min.js"></script>
    <script src="~/Scripts/scripts.js"></script>

</body>
</html>

