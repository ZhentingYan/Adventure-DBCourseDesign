@{
    ViewBag.Title = "发布体验活动";
}

<link rel="stylesheet" href="~/Content/paper-bootstrap-wizard.css" />

<script>

</script>

<style type="text/css">
    .choosed {
        border-style: dashed;
        border-color: antiquewhite;
    }
</style>

<div class="image-container set-full-height" style="background-image: url('../../images/bg_1.jpg');">

    <!-- Big container -->
    <div class="container">
        <div class="row">
            <div class="col-sm-8 col-sm-offset-2">
                <!-- Wizard container -->
                <div class="wizard-container">
                    <div class="card wizard-card2" style="align-self:center" id="wizard">
                        <div class="wizard-header">
                            <h3 class="wizard-title">发布特殊价格</h3>
                            <hr />
                        </div>
                        <form action="#" method="post">
                            <!-- 创建价格实例 -->
                            <div>
                                <div class="row">
                                    <div class="col-sm-5 col-sm-offset-1" style="margin-left:auto; margin-right:auto;">
                                        <div class="form-group">
                                            <label>开始时间</label>
                                            <input type="date" id="start-time" class="form-control" name="???" required="required">
                                        </div>
                                    </div>
                                    <div class="col-sm-5 col-sm-offset-1" style="margin-left:auto; margin-right:auto;">
                                        <div class="form-group">
                                            <label>结束时间</label>
                                            <input type="date" id="end-time" class="form-control time-input" name="???" required="required">
                                        </div>
                                    </div>
                                    <div class="col-sm-5 col-sm-offset-1" style="margin-left:auto; margin-right:auto;">
                                        <div class="form-group">
                                            <label>价格/晚</label>
                                            <div class="input-group">
                                                <input type="number" class="form-control" name="???" required="required"
                                                       onkeyup="if (this.value.length == 1) { this.value = this.value.replace(/[^1-9]/g, '') }else { this.value = this.value.replace(/\D/g, '') }"
                                                       onafterpaste="if(this.value.length==1){this.value=this.value.replace(/[^1-9]/g,'')}else{this.value=this.value.replace(/\D/g,'')}">
                                                <span class="input-group-addon"> ￥ </span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-sm-8 col-sm-offset-2" style="margin-left:auto; margin-right:auto;">
                                        <div class="form-group">
                                            <button type="submit" class="form-control">发布</button>
                                        </div>
                                    </div>
                                    <div id="delete-button" class="col-sm-8 col-sm-offset-2" style="margin-left:auto; margin-right:auto;">
                                        <div class="form-group">
                                            <button id="delete-button" class="form-control">取消</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!-- 创建活动实例 END -->
                        </form>

                    </div>
                </div>
                <!-- wizard container -->
            </div>
        </div>
        <!-- row -->
    </div>
    <!--  big container -->

</div>

<script>

    $(function () {
        var $newAct = $('#new-act');
        var $addInstance = $('#add-instance');
        var $choosedActivity;
        $newAct.show();
        $addInstance.hide();

        $('.activity').on('click', function () {

            $newAct.hide();
            $addInstance.show();
            $(this).addClass('choosed');
            $choosedActivity = $(this);
            document.getElementById('add-instance').reset();
        });

        $('#delete-button').on('click', function () {
            $newAct.show();
            $addInstance.hide();
            $choosedActivity.removeClass('choosed');
            document.getElementById('new-act').reset();
        });
    });

    $(function () {
        var date = new Date();
        var today = date.getFullYear();
        today += "-";
        today += date.getMonth() + 1 < 10 ? "0" + (date.getMonth() + 1) : (date.getMonth() + 1);
        today += "-";
        today += date.getDate() < 10 ? "0" + date.getDate() : date.getDate();
        $('#start-time').attr('min', today);
        $('#end-time').attr('min', today);

        $('#start-time').change(function () {
            $('#end-time').attr('min', $(this).val());
        });
    });



</script>
